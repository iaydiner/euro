<div class="col-xs-12 col-sm-10 col-lg-10">

		<div class="col-xs-12 col-lg-12">

			<div id="banner001" class="row">

				<div class="thumbnail">

				<%= image_tag "pic2000x200v2.gif", :class => "group list-group-image" %>   

				</div>

			</div>

		</div>



	<div id="products" class="row">

	<%  if not(params[:jewelry_type].blank? && params[:metal].blank? && params[:color].blank? && params[:stone].blank?) %>

		<%  @fjewelries.each do |fjewelry| %>

				<div class="item  col-xs-12 col-lg-3">

					<a href="/fjewelries/<%= fjewelry.id %>">

						<div class="thumbnail">

						<%= image_tag fjewelry.fjewelry_img.url(:fjewelry_show), :class => "group list-group-image" %> 

						<div class="caption">

							<h4 class="group inner grid-group-item-heading">

								<%= fjewelry.sku %></h4>

							<h4 class="group inner grid-group-item-heading">

								<%= fjewelry.title %></h4>

							<h4 class="group inner grid-group-item-heading">

								<%= fjewelry.short_desc %></h4>

						</div>

					</div>

					</a>

				</div>



		<% end %>

			<% if current_user.try(:admin?) %>

			<%= link_to "Add Tool", new_fjewelry_path %>

			<% end %>

	<% else %>





	

				<div id="products" class="row">   



				<div class="item  col-xs-12 col-lg-3">

					<a href="/fjewelries?jewelry_type[]=Earrings">

