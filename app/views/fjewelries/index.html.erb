						<%= image_tag "fjindex2_500x250.jpg", :class => "group list-group-image" %> 

						<div class="caption">

							<h4 class="group inner grid-group-item-heading">Pendants</h4>

						</div>

					</div>

					</a>

				</div>

				<div class="item  col-xs-12 col-lg-3">

				<a href="/fjewelries?jewelry_type[]=Chains">

					<div class="thumbnail">

						<%= image_tag "fjindex3_500x250.jpg", :class => "group list-group-image" %> 

