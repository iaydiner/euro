<div class="col-xs-10 col-lg-10">	

		<div class="col-xs-12 col-lg-12">
			<div id="banner001" class="row">
				<div class="thumbnail">
				<%= image_tag "pic2000x200v2.gif", :class => "group list-group-image" %>   
				</div>
			</div>
		<div>

	<div class="col-lg-6">

		<% if current_user.try(:admin?) %>
			<div class="col-lg-12">
			<%= link_to "Back", findings_path %>
			<%= link_to "Edit", edit_finding_path %>
			<%= link_to "Delete", finding_path(@finding), method: :delete, data: { confirm: "Are you sure?"} %>
			</div>
		<% end %>
		<div class="col-lg-12">
			<%= image_tag @finding.finding_img.url(:finding_show) %>
		</div>

	</div>



	<div class="col-lg-6">
		<h2><span class="label label-primary"><%= @finding.title %></span></h2><br>
		
		<h3><span class="xxxxxxxxxxxx"><%= @finding.short_desc %></span></h3><br>
		<h3>No:<span class="monospaced"><%= @finding.sku %></span></h3><br>

		<% if user_signed_in? %>
		<h3>Price:<span class="monospaced"> $<%= @finding.price %></span></h3><br>
		<% end %>

		<p><span class="description"><%= @finding.long_desc %></span></p><br>
		<h3><u>Specifications</u></h3><br>
		
		<% if @finding.finding_type? %>
			<div class="col-xs-6"><h4> Type:</h4></div>
			<div class="col-xs-6"><h4><%= @finding.finding_type %></h4></div>
		<% end %>

		<% if @finding.metal? %>
			<div class="col-xs-6"><h4> Metal:</h4></div>
			<div class="col-xs-6"><h4><%= @finding.metal %></h4></div>
		<% end %>
		<% if @finding.color? %>
			<div class="col-xs-6"><h4> Color:</h4></div>
			<div class="col-xs-6"><h4><%= @finding.color %></h4></div>
		<% end %>

		
		<p>To order <a href="tel:18005551212">please call 1-800-555-1212</a></p>
	</div>




</div>